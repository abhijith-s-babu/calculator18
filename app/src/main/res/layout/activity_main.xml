<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/data"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#012841"
            android:gravity="end|bottom"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/output"
            android:gravity="end|center"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#ffffff"
            android:background="#012842"
            android:textSize="40sp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/num7"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="7"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/num8"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="8"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:height="80dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:background="@drawable/ripple"
            android:text="9"
            android:textSize="40sp"
            android:textColor="#ffffff"

            />

            <Button
                android:id="@+id/div"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="/"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/num4"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="4"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/num5"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="5"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/num6"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="6"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/multi"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="*"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/num1"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="1"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/num2"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="2"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/num3"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="3"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="+"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="C"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/num0"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="0"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/point"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="."
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/sub"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/ripple"
                android:text="-"
                android:textSize="40sp"
                android:textColor="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_height="80dp"
                android:background="@drawable/gradient"
                android:text="From Abhijith"
                android:fontFamily="cursive"
                android:textSize="52sp"
                android:textColor="#ffffff"

                />
            <Button
                android:id="@+id/eq"
                android:layout_width="0dp"
                android:height="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:background="@drawable/operations"
                android:text="="
                android:textSize="42sp"
                android:textColor="#ffffff"

                />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>